@page
@model RazorInputPages.Pages.PersonInfoModel
@{
    ViewData["Title"] = "PersonInfo";
}


<form method="post">
    <div class="form-group">
        @for (int i = 0; i < Model.FullNames.Count; i++)
        {
            <input type="hidden" asp-for="FullNames[i]" />
        }
        <input asp-for="FirstName" type="text" placeholder="Type your First Name" />
        <input asp-for="LastName" type="text" placeholder="Type your Last Name" />
        <input asp-for="Age" type="number" placeholder="Type your Age" />
        <button type="submit" class="btn btn-primary">Submit</button>

    </div>
</form>

@foreach (var fullName in Model.FullNames)
{
    <h3>Hello @fullName</h3>
}

